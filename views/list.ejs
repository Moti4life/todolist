
<!doctype html>
<html lang="en">
  <%- include("header") -%>
  <body>
    
    <div class="container listDiv">
    <div class=" p-4 rounded-lg m-3">
      
      <h1>List: <%=myListName%></h1>
      
      <p class="lead">so.. watcha gonna do today?</p>
      <hr class="my-4">
      
          <div id="slideContainer">
            <ul id="myList" class="list-group">
                  <% listItem.forEach( (item) => { %>
                    <form action="/deletePost" method="post">
                      <li class="list-group-item"><input type="checkbox" value="<%=item._id%>" name="checkbox" onchange="this.form.submit()"> <%= item.name %></li>
                      <input type="hidden" name="listName" value="<%=myListName%>"></input>
                    </form>
                 
                  <% }); %>
            </ul>
          </div>
        
        <div class="postTask row"> 
          <form action="/" method="post">
            <!-- <input type="text" name="newTask" id="nTask"  placeholder="add new task here" autocomplete="off"> -->
            
            <div class="inputTask col-12">
              <textarea name="newTask" id="nTask" autocomplete="off"  ></textarea>
            </div>
            
            
            <div class="postButton col-12">
              <button type="submit" id="addTaskBtn" name="list" value="<%=myListName%>" class="btn-success ">Add Task</button>
            </div>
    
          </form>
        </div>

    </div>
  </div>
    
    <!-- Optional JavaScript; choose one of the two! -->
